import javax.swing.JOptionPane;

public class DiabloIVTotalDmgCalculator {

    public static void main(String[] args) {
        // Create the input dialogs
        String weaponDmgString = JOptionPane.showInputDialog("What is the Weapon DPS? (Use the max DPS from the tooltip): ");
        String skillModifierString = JOptionPane.showInputDialog("What is the skill modifier percentage?: ");
        String dexterityString = JOptionPane.showInputDialog("Enter your Dexterity stat: ");

        // Parse input values
        double weaponDmg = Double.parseDouble(weaponDmgString);
        double skillModifier = Double.parseDouble(skillModifierString) / 100;
        double dexterity = Double.parseDouble(dexterityString);

        // Calculate damage
        double baseDmg = weaponDmg * skillModifier;
        double dexDmgModifier = (dexterity * 0.1) * 100;
        double totalDmg = baseDmg + dexDmgModifier;

        // Create the result message box
        String message = "Base Damage: " + baseDmg + "\nDex Damage Modifier: " + dexDmgModifier + "\nTotal Damage: " + totalDmg;
        JOptionPane.showMessageDialog(null, message, "Total Damage Calculation", JOptionPane.INFORMATION_MESSAGE);
    }
}
